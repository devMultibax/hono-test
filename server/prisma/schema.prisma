generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Status {
  active
  inactive
}

enum Role {
  USER
  ADMIN
}

enum ActionType {
  CREATE
  UPDATE
  DELETE
  RESET_PASSWORD
  CHANGE_PASSWORD
}

model Department {
  id            Int       @id @default(autoincrement())
  name          String    @unique @db.VarChar(100)
  status        Status    @default(active)
  createdAt     DateTime  @default(now())
  createdBy     String    @db.VarChar(100)
  createdByName String    @default("") @db.VarChar(200)
  updatedAt     DateTime?
  updatedBy     String?   @db.VarChar(100)
  updatedByName String?   @db.VarChar(200)

  sections Section[]
  users    User[]

  @@index([status])
  @@index([createdAt])
  @@map("department")
}

model Section {
  id            Int       @id @default(autoincrement())
  departmentId  Int
  name          String    @db.VarChar(100)
  status        Status    @default(active)
  createdAt     DateTime  @default(now())
  createdBy     String    @db.VarChar(100)
  createdByName String    @default("") @db.VarChar(200)
  updatedAt     DateTime?
  updatedBy     String?   @db.VarChar(100)
  updatedByName String?   @db.VarChar(200)

  department Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  users      User[]

  @@unique([departmentId, name])
  @@index([departmentId])
  @@index([status])
  @@index([createdAt])
  @@map("section")
}

model User {
  id                Int       @id @default(autoincrement())
  username          String    @unique @db.Char(6)
  password          String    @db.VarChar(255)
  firstName         String    @db.VarChar(100)
  lastName          String    @db.VarChar(100)
  departmentId      Int
  sectionId         Int?
  email             String?   @db.VarChar(255)
  tel               String?   @db.Char(10)
  role              Role      @default(USER)
  status            Status    @default(active)
  createdAt         DateTime  @default(now())
  createdBy         String    @db.VarChar(100)
  createdByName     String    @default("") @db.VarChar(200)
  updatedAt         DateTime?
  updatedBy         String?   @db.VarChar(100)
  updatedByName     String?   @db.VarChar(200)
  lastLoginAt       DateTime?
  isDefaultPassword Boolean   @default(false)
  tokenVersion      Int       @default(0)

  department Department @relation(fields: [departmentId], references: [id], onDelete: Restrict)
  section    Section?   @relation(fields: [sectionId], references: [id], onDelete: SetNull)

  @@index([username])
  @@index([email])
  @@index([departmentId])
  @@index([sectionId])
  @@index([status])
  @@index([createdAt])
  @@map("user")
}

model UserLog {
  id            Int        @id @default(autoincrement())
  username      String     @db.Char(6)
  firstName     String     @db.VarChar(100)
  lastName      String     @db.VarChar(100)
  department    String     @db.VarChar(100)
  section       String     @db.VarChar(100)
  email         String?    @db.VarChar(255)
  tel           String?    @db.Char(10)
  role          Role       @default(USER)
  status        Status     @default(active)
  createdAt     DateTime   @default(now())
  createdBy     String     @db.VarChar(100)
  createdByName String     @default("") @db.VarChar(200)
  updatedAt     DateTime?
  updatedBy     String?    @db.VarChar(100)
  updatedByName String?    @db.VarChar(200)
  actionType    ActionType
  actionAt      DateTime   @default(now())

  @@index([username])
  @@index([actionType])
  @@index([actionAt])
  @@map("user_log")
}

model SystemSetting {
  id            Int       @id @default(autoincrement())
  key           String    @unique @db.VarChar(100)
  value         String    @default("false") @db.Text
  description   String?   @db.VarChar(500)
  updatedAt     DateTime?
  updatedBy     String?   @db.VarChar(100)
  updatedByName String?   @db.VarChar(200)

  @@index([key])
  @@map("system_setting")
}
